TARGET=rt_pvc
OBJS=pvc.o rt_pvc.o RtAudio.o Thread.o Stk.o chuck_fft.o

CC=gcc
CPP=g++
INCLUDES=
CFLAGS=-D__LINUX_ALSA__ $(INCLUDES) -O3 -g -c
LIBS=-lasound -L/usr/X11R6/lib -lGL -lGLU -lglut -lX11 -lXi -lXext -lXmu -lm -lpthread

rt_pvc: $(OBJS)
	$(CPP) -o $@ $(OBJS) $(LIBS)

.o: $*.h

.c.o: $*.h $*.c
	$(CC) $(CFLAGS) $*.c

.cpp.o: $*.h $*.cpp
	$(CC) $(CFLAGS) $*.cpp

clean: 
	rm -f rt_pvc *~ *.o
